%nav.navbar.navbar-expand-lg.mb-3
  .container-fluid
    %a.card.border-0.rounded-5.shadow-lg.py-2.px-3.navbar-brand{href: "/"} musicGuru

    %button.navbar-toggler{ type: :button, data: { bs_toggle: :collapse, bs_target: '#navbar-content' }, aria: { controls: 'navbar-content', expanded: 'false', label: 'Toggle navigation' } }
      %span.navbar-toggler-icon

    - if user_signed_in?
      #navbar-content.navbar-collapse.collapse
        %ul.navbar-nav.me-auto.mb-2.mb-lg-0
          %li.nav-item
            - if current_user.role == 'admin' 
              %a.nav-link.active{aria_current: "page", href: "/admin/dashboard"} Home
            - elsif current_user.role == 'teacher'
              %a.nav-link.active{aria_current: "page", href: "/teachers/dashboard"} Home
            - else
              %a.nav-link.active{aria_current: "page", href: "/students/dashboard"} Home

          %li.nav-item
            - if current_user.role == 2
              %a.nav-link{href: "#"} Users
            - else
              %a.nav-link{href: "#"} Tasks

    .btn.btn-primary.border-0.rounded-5.shadow-lg.py-2.px-3
      - if user_signed_in?
        = link_to 'Log out', destroy_user_session_path, class: 'nav-link', method: :delete
      - else
        = link_to 'Log in', new_user_session_path, class: 'nav-link'