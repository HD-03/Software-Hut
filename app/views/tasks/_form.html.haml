= form_for @task, url: tasks_path, html: {class: "form-inline"} do |f|
  .form-group.mb-3
    = f.label :student_id, "Student's Full Name", class: 'form-label'
    = f.collection_select :student_id, @students, :id, :full_name, {prompt: "Choose a Student"}, {class: "form-select"}

  .form-group.mb-3
    = f.label :name, "Task Name", class: 'form-label'
    = f.text_field :name, class: "form-control", placeholder: "Task Name"

  .form-group.mb-3
    = f.label :description, "Task Description", class: 'form-label'
    = f.text_field :description, class: "form-control", placeholder: "Task Description"

  .form-group.mb-3
    = f.label :reward_xp, "Experience Points", class: 'form-label'
    = f.number_field :reward_xp, class: "form-control", placeholder: "0"

  .form-group.mb-3
    = f.label :deadline, 'Deadline', class: 'form-label'
    = f.date_select :deadline, {}, class: "form-control"

  .form-group.mb-3
    = f.label :recording_boolean, 'Allow Recording?', class: 'form-label'
    = f.select :recording_boolean, [['No', false], ['Yes', true]], {}, class: "form-select"

  -# .form-group.mb-3
  -#   = f.label :mp3_file, 'Attach MP3 file?', class: 'form-label'
  -#   = f.file_field :mp3_file, accept: 'audio/mp3', class: "form-control"

  .form-group.text-center
    = f.submit 'Save', class: 'btn btn-success border-0 rounded-5 shadow-lg py-2 px-3'