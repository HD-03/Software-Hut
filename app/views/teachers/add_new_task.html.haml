.container.mt-5
  .row.justify-content-center
    .col-md-6
      = form_with model: @task, local: true do |f|
        .form-group.mb-3
          = f.label :student_id, "Student's Full Name", class: 'form-label'
          = f.collection_select :student_id, @students, :id, :full_name, { include_blank: "Select Student(s)" }, { multiple: true, class: "form-select" }

        .form-group.mb-3
          = f.label :name, "Task Name", class: 'form-label'
          = f.text_field :name, value: @task.name, class: "form-control", placeholder: "Task Name"

        .form-group.mb-3
          = f.label :description, "Task Description", class: 'form-label'
          = f.text_area :description, value: @task.description, class: "form-control", placeholder: "Task Description"

        .form-group.mb-3
          = f.label :reward_xp, "Experience Points", class: 'form-label'
          = f.number_field :reward_xp, value: @task.reward_xp, class: "form-control", placeholder: "0"

        .form-group.mb-3
          = f.label :deadline, 'Deadline', class: 'form-label'
          = f.date_select :deadline, {}, class: "form-control"

        .form-group.mb-3
          = f.label :recording_boolean, 'Allow Recording?', class: 'form-label'
          = f.select :recording_boolean, options_for_select([['No', false], ['Yes', true]], @task.recording_boolean), {}, class: "form-select"

        .form-group.text-center
          = f.submit 'Add Task', class: 'btn btn-success border-0 rounded-5 shadow-lg py-2 px-3'
