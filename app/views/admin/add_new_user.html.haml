#container
  %header
  %main
    .admin-new_user
      %h1 Add New User
      -# frozen_string_literal: true
      = simple_form_for @user, url: create_new_user_path do |f|
        = f.input :full_name, wrapper_html: { class: 'mb-3' }
        = f.input :email, wrapper_html: { class: 'mb-3' }
        = f.input :username, wrapper_html: { class: 'mb-3' }
        = f.input :password, wrapper_html: { class: 'mb-3' }
        = f.input :role, collection: [['Student', :student], ['Teacher', :teacher]], wrapper_html: { class: 'mb-3' }
        = f.input :old_enough_for_cooler_avatars, as: :boolean, label: 'Old enough for cooler avatars?', wrapper_html: { class: 'mb-3' }, inline_label: true

        %button.btn.btn-primary{ type: 'submit' }
          Add User
        = link_to 'Cancel', admin_dashboard_path, class: 'btn btn-link ms-auto'
